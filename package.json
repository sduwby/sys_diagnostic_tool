{
  "name": "sys_diagnostic_tool",
  "version": "1.0.0",
  "description": "Professional system diagnostic and typing accuracy analyzer",
  "main": "main.js",
  "scripts": {
    "prestart": "npm run compile",
    "prebuild": "npm run compile",
    "compile": "tsc",
    "watch": "tsc --watch",
    "start": "npm run compile && electron .",
    "dev": "tsc --watch & electron .",
    "build:win": "npm run compile && electron-builder --win --x64",
    "build:win:x64": "npm run compile && electron-builder --win --x64",
    "build:win:ia32": "npm run compile && electron-builder --win --ia32",
    "build:win:arm64": "npm run compile && electron-builder --win --arm64",
    "build:mac": "npm run compile && electron-builder --mac",
    "build:mac:x64": "npm run compile && electron-builder --mac --x64",
    "build:mac:arm64": "npm run compile && electron-builder --mac --arm64",
    "build:mac:universal": "npm run compile && electron-builder --mac --universal",
    "build:linux": "npm run compile && electron-builder --linux",
    "build:linux:x64": "npm run compile && electron-builder --linux --x64",
    "build:linux:arm64": "npm run compile && electron-builder --linux --arm64",
    "build": "npm run compile && electron-builder --win --mac --linux"
  },
  "keywords": ["diagnostic", "typing", "analyzer", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0"
  },
  "build": {
    "appId": "com.sysdiag.tool",
    "productName": "System Diagnostic Tool",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*.js",
      "src/**/*.html",
      "src/**/*.css",
      "src/**/*.svg",
      "!src/**/*.ts"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32", "arm64"]
        }
      ],
      "icon": "src/icon.svg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "src/icon.svg",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "src/icon.svg",
      "category": "Utility"
    }
  }
}
